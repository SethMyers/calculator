<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numField"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginRight="20dp"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/numField"
        android:layout_marginStart="15dp"
        android:text="1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/numField"
        android:layout_toEndOf="@+id/btn1"
        android:text="2"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/numField"
        android:layout_toEndOf="@+id/btn2"
        android:text="3"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/numField"
        android:layout_toEndOf="@+id/btn3"
        android:text="+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMC"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/numField"
        android:layout_toEndOf="@+id/btnAdd"
        android:text="MC"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:text="4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn4"
        android:text="5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn5"
        android:text="6"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn6"
        android:text="-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMR"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btnSub"
        android:text="MR"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:text="7"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn7"
        android:text="8"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn8"
        android:text="9"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn9"
        android:text="/"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMAdd"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btnSub"
        android:text="M+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDec"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn7"
        android:text="."
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btnDec"
        android:text="0"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn0"
        android:text="C"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btnC"
        android:text="*"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnPM"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btnDec"
        android:layout_toEndOf="@+id/btnEq"
        android:text="+/-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMSub"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btnMult"
        android:text="M-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnEq"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnDec"
        android:layout_marginStart="15dp"
        android:text="="
        android:textSize="24sp" />


</RelativeLayout>